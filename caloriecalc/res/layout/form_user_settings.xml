<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="true"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/form_user_settings_ll_separador"
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:layout_weight="1" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/form_user_settings_ll_peso"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/form_user_settings_txt_peso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:gravity="left"
            android:text="@string/txt_peso"
            android:textSize="20sp" >
        </TextView>

        <EditText
            android:id="@+id/form_user_settings_edit_txt_peso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:inputType="numberDecimal"
            android:hint="@string/txt_enter_weight" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/form_user_settings_ll_altura"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/form_user_settings_txt_altura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="@string/txt_altura"
            android:textSize="20sp" >
        </TextView>

        <EditText
            android:id="@+id/form_user_settings_edit_txt_altura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:inputType="numberDecimal"
            android:hint="@string/txt_enter_height" >

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/form_user_settings_ll_sexo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/form_user_settings_txt_sexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="@string/txt_sexo"
            android:textSize="20sp" >
        </TextView>

        <RadioGroup
            android:id="@+id/form_user_settings_radio_sexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/form_user_settings_radio_sexo_hombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/radio_sexo_hombre" >
            </RadioButton>

            <RadioButton
                android:id="@+id/form_user_settings_radio_sexo_mujer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radio_sexo_mujer" >
            </RadioButton>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/form_user_settings_ll_edad_tit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/form_user_settings_txt_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="@string/txt_dob"
            android:textSize="20sp" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/form_user_settings_ll_edad_dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <DatePicker
            android:id="@+id/form_user_settings_datepicker_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/txt_enter_dob"
            android:startYear="1930" >
        </DatePicker>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/form_user_settings_ll_enviar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <Button
            android:id="@+id/form_user_settings_btn_cancel_user_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_cancelar" >
        </Button>

        <Button
            android:id="@+id/form_user_settings_btn_save_user_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_guardar" >
        </Button>
    </LinearLayout>

</LinearLayout>